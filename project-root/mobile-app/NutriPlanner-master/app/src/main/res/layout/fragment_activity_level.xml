<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Survey.ActivityLevelFragment"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Укажите свой уровень\n активности"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvwAL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:text="Средний уровень активности:\n От 7 500 до 10 000 шагов в день"
        android:textSize="18sp"
        android:textStyle="bold" />

    <SeekBar
        android:id="@+id/activityLevelSeekBar"
        style="@style/Widget.AppCompat.SeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="4"
        android:layout_marginTop="20dp"
        android:paddingLeft="32dp"
        android:paddingTop="16dp"
        android:paddingRight="32dp"
        android:paddingBottom="16dp"
        android:progress="2"
        android:progressTint="@color/main_color" />

</LinearLayout>